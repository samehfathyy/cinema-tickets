<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="400" prefHeight="300" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cinematickets.LoginController">

    <children>
        <VBox spacing="15" layoutX="100" layoutY="50">
            <children>
                <Label text="Login" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

                <TextField fx:id="usernameField" promptText="Username"/>
                <PasswordField fx:id="passwordField" promptText="Password"/>

                <!-- FIX: Added fx:id -->
                <Button text="Login" fx:id="loginBtn" />

                <!-- FIX: Change fx:id to goToSignUpBtn to match controller -->
                <Button text="Sign Up" fx:id="goToSignUpBtn"/>
            </children>
        </VBox>
    </children>

</AnchorPane>
