<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.cinematickets.MyTicketsController"
      spacing="20"
      style="-fx-background-color: #F4F6FA;">

    <!-- ===== Top Bar ===== -->
    <HBox alignment="CENTER_LEFT"
          spacing="15"
          style="-fx-background-color: #2c3e50; -fx-padding: 15;">
        <Label text="ðŸŽ« My Tickets"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back"
                onAction="#goBack"
                style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-radius: 20; -fx-text-fill: white; -fx-padding: 6 14;"/>
    </HBox>

    <!-- ===== Ticket Table ===== -->
    <TableView fx:id="ticketsTable" prefHeight="400" style="-fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5,0,0,2);">
        <columns>
            <TableColumn text="Movie" fx:id="movieColumn" prefWidth="150"/>
            <TableColumn text="Hall" fx:id="hallColumn" prefWidth="80"/>
            <TableColumn text="Showtime" fx:id="showtimeColumn" prefWidth="120"/>
            <TableColumn text="Seats" fx:id="seatsColumn" prefWidth="120"/>
            <TableColumn text="Total ($)" fx:id="totalColumn" prefWidth="100"/>
            <TableColumn fx:id="expiredColumn" text="Expired"/>
        </columns>
    </TableView>

</VBox>
