<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cinematickets.AdminShowTimeController"
            prefHeight="650.0" prefWidth="900.0">

    <!-- Top: Title -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="backButton" text="â† Back to Dashboard"
                        style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Admin - Manage ShowTimes" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">

            <!-- Add ShowTime Form -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Add New ShowTime" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

                <GridPane hgap="15" vgap="15">
                    <!-- Movie Selection -->
                    <Label text="Select Movie:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="movieComboBox" promptText="Choose a movie" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <!-- Hall Selection -->
                    <Label text="Select Hall:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold;"/>
                    <ComboBox fx:id="hallComboBox" promptText="Choose a hall" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <!-- Date Selection -->
                    <Label text="Select Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold;"/>
                    <DatePicker fx:id="datePicker" promptText="Pick a date" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <!-- Time Selection -->
                    <Label text="Select Time:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold;"/>
                    <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <Spinner fx:id="hourSpinner" prefWidth="80" editable="true"/>
                        <Label text=":" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <Spinner fx:id="minuteSpinner" prefWidth="80" editable="true"/>
                        <Label text="(HH:MM)" style="-fx-text-fill: gray;"/>
                    </HBox>

                    <!-- Price Input -->
                    <Label text="Ticket Price:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="priceField" promptText="Enter price (e.g., 50.0)" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>

                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="addShowTimeButton" text="Add ShowTime" onAction="#handleAddShowTime"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                            prefWidth="150"/>
                    <Button text="Refresh List" onAction="#handleRefresh"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                            prefWidth="150"/>
                </HBox>

                <!-- Status Label -->
                <Label fx:id="statusLabel" style="-fx-font-size: 14;"/>
            </VBox>

            <!-- ShowTimes Table -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Existing ShowTimes" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <!-- NEW: Delete Button -->
                    <Button fx:id="deleteButton" text="ðŸ—‘ï¸ Delete Selected" onAction="#handleDeleteShowTime"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"
                            disable="true"/>
                </HBox>

                <TableView fx:id="showTimesTable" VBox.vgrow="ALWAYS" style="-fx-border-color: #bdc3c7; -fx-border-width: 1;">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="movieColumn" text="Movie" prefWidth="180"/>
                        <TableColumn fx:id="hallColumn" text="Hall" prefWidth="130"/>
                        <TableColumn fx:id="dateTimeColumn" text="Date &amp; Time" prefWidth="160"/>
                        <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"/>
                        <TableColumn fx:id="activeColumn" text="Active" prefWidth="70"/>
                    </columns>
                    <placeholder>
                        <Label text="No showtimes available. Add one above!" style="-fx-text-fill: gray;"/>
                    </placeholder>
                </TableView>

                <!-- Instructions Label -->
                <Label text="ðŸ’¡ Tip: Click on a showtime in the table to select it, then click 'Delete Selected' to remove it."
                       style="-fx-text-fill: #7f8c8d; -fx-font-style: italic; -fx-font-size: 12;"/>
            </VBox>

        </VBox>
    </center>

</BorderPane>
